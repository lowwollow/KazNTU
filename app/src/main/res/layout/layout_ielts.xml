<layout>
    <data>
        <variable
            name="ieltsCert"
            type="kz.almaty.satbayevuniversity.data.entity.admission.education_info.IeltsCert" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ielts_score"
            android:layout_marginTop="@dimen/field_registration_margin_top"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{String.valueOf(ieltsCert.score)}"
            />
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ielts_number"
            android:layout_marginTop="@dimen/field_registration_margin_top"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={ieltsCert.number}"
            />
        <TextView
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ielts_date"
            android:layout_marginTop="@dimen/field_registration_margin_top"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@={ieltsCert.date}"
            />
    </LinearLayout>
</layout>
