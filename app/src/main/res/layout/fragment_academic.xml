<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="academicViewModel"
            type="kz.almaty.satbayevuniversity.ui.academicProgress.AcademicViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context="kz.almaty.satbayevuniversity.ui.academicProgress.AcademicFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateDrawable="@drawable/progress"
            android:visibility="@{academicViewModel.loadRv ? View.VISIBLE : View.GONE}"/>

        <androidx.recyclerview.widget.RecyclerView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/journalRecyclerView"
            tools:listitem="@layout/journal_item"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            android:visibility="@{academicViewModel.loadRv ? View.GONE : View.VISIBLE}"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/emptyImage"
            android:src="@drawable/empty"
            app:layout_constraintWidth_percent="0.6"
            app:layout_constraintHeight_percent="0.4"
            android:visibility="@{academicViewModel.getEmptyBoolean ? View.VISIBLE : View.GONE}" />

        <TextView
            android:id="@+id/emptyTextView"
            app:layout_constraintTop_toBottomOf="@+id/emptyImage"
            app:layout_constraintStart_toStartOf="@id/emptyImage"
            app:layout_constraintEnd_toEndOf="@id/emptyImage"
            android:gravity="center"
            android:textColor="@color/black"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/data"
            tools:text="К сожалению, данные по данному запросу отсутствуют..."
            android:visibility="@{academicViewModel.getEmptyBoolean ? View.VISIBLE : View.GONE}" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
