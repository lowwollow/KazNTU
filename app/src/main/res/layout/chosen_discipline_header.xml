<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="descipline"
            type="kz.almaty.satbayevuniversity.data.entity.individualPlan.choosenDiscipline.Semesters1" />
        <variable
            name="imageClickListener"
            type="kz.almaty.satbayevuniversity.ui.individualPlan.chosenDisciplines.ChosenDisciplineEventListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@{descipline.title}"
            android:id="@+id/seasons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Осень 2017-2018"
            android:textSize="20sp"
            android:padding="10dp"
            android:background="@color/transcriptColor"
            android:fontFamily="@font/open_sans_semibold"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


