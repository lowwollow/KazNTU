<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="specialityChoise"
            type="kz.almaty.satbayevuniversity.data.entity.admission.choosing_education_master.SpecialityChoise" />
        <variable
            name="bitmap"
            type="android.graphics.Bitmap" />
        <variable
            name="masterChoosingEducationProgrammFragment"
            type="kz.almaty.satbayevuniversity.ui.admission.master.choosing_education.MasterChoosingEducationProgrammFragment" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:orientation="vertical">
                        <RadioGroup
                            android:id="@+id/masterEnrolleeTypeRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/corporateRadioButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/corporate"
                                android:checked="@{specialityChoise.isCorporateStudent}"/>
                            <RadioButton
                                android:id="@+id/individualRadioButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/individual"
                                android:checked="@{!specialityChoise.isCorporateStudent}"/>
                        </RadioGroup>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/group_education_program"
                            android:layout_marginTop="@dimen/field_registration_margin_top"/>
                        <Spinner
                            android:id="@+id/groupEducationalProgramSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/op_speciality"
                            android:layout_marginTop="@dimen/field_registration_margin_top"/>
                        <Spinner
                            android:id="@+id/specialitiesSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/direction_type"
                            android:layout_marginTop="@dimen/field_registration_margin_top"/>
                        <Spinner
                            android:id="@+id/masterProgramTypeSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_form"
                            android:layout_marginTop="@dimen/field_registration_margin_top"/>
                        <Spinner
                            android:id="@+id/paymentTypeSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <LinearLayout
                            android:id="@+id/grant_types_linear_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="@dimen/field_registration_margin_top">
                            <TextView
                                android:textColor="@color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/grant_types"/>
                            <Spinner
                                android:id="@+id/grantTypesSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                />
                        </LinearLayout>

                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/education_language"
                            android:layout_marginTop="@dimen/field_registration_margin_top"/>
                        <Spinner
                            android:id="@+id/eduLanguagesSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/guarantee_letter"
                            android:layout_marginTop="@dimen/field_registration_margin_top"/>
                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/upload"/>
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            app:bitmap="@{bitmap}"
                            android:onClick="@{() -> masterChoosingEducationProgrammFragment.openFullImage(bitmap)}"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:layout_marginTop="@dimen/field_registration_margin_top"/>
            </LinearLayout>
        </ScrollView>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateDrawable="@drawable/progress"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>