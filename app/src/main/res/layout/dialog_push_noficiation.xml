<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="30dp">
        <ImageView
            android:id="@+id/dialog_push_notification_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_done_all"/>

        <TextView
            android:id="@+id/dialog_push_notification_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hello"
            app:layout_constraintTop_toBottomOf="@+id/dialog_push_notification_image_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:fontFamily="@font/open_sans_bold"
            android:layout_margin="20dp"/>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/dialog_push_notification_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_push_notification"
            app:layout_constraintTop_toBottomOf="@+id/dialog_push_notification_title_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_margin="20dp" />
        <Button
            android:id="@+id/dialog_push_notification_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/dialog_push_notification_content_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/ok"
            android:layout_margin="20dp"
            android:background="@drawable/ok_button_background"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="@color/colorWhite"
            app:layout_constraintWidth_percent="0.5"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>