<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable
            name="handler"
            type="kz.almaty.satbayevuniversity.ui.admission.master.achievement_info.MasterAchievementFragment" />
        <variable
            name="achievementInfo"
            type="kz.almaty.satbayevuniversity.data.entity.admission.achievement_info_master.AchievementInfo" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient">
            <LinearLayout
                android:id="@+id/mainLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    android:orientation="vertical">
                    <CheckBox
                        android:id="@+id/ieltsCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ielts_certificate"
                        android:layout_marginTop="@dimen/field_registration_margin_top"
                        android:checked="@{achievementInfo.ieltsCert.has}" />
                    <include
                        android:id="@+id/ieltsLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_ielts_master"
                        android:visibility="gone"
                        app:ieltsCert="@{achievementInfo.ieltsCert}"/>
                    <CheckBox
                        android:id="@+id/toeflCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/certificate_toefl"
                        android:layout_marginTop="@dimen/field_registration_margin_top"
                        android:checked="@{achievementInfo.toeflCert.has}"/>
                    <include
                        android:id="@+id/toeflLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/layout_toefl_master"
                        android:visibility="gone"
                        app:toeflCert="@{achievementInfo.toeflCert}"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="20dp"
                android:layout_marginTop="@dimen/field_registration_margin_top">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/field_registration_margin_top">
                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/additional_info"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:text="@={achievementInfo.additionalInformation}"/>
                    <CheckBox
                        android:id="@+id/hasScienceWorkCheckBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/do_you_have_scientific_work"
                        android:checked="@{achievementInfo.hasScienceWorks}"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:id="@+id/scientificWorksLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/save"
                    android:layout_marginTop="@dimen/field_registration_margin_top"
                    android:onClick="@{() -> handler.saveAchievementInfo()}"/>
            </LinearLayout>
        </ScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/addScientificWorkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white"
            android:text="@string/add_scientific_work"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95"
            app:layout_constraintHorizontal_bias="0.95"
            android:onClick="@{() -> handler.addNewScienceWork()}"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminateDrawable="@drawable/progress"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>