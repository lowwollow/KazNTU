<layout>
    <data>
        <variable
            name="scienceWork"
            type="kz.almaty.satbayevuniversity.data.entity.admission.achievement_info_master.ScienceWork" />
    </data>
    <androidx.cardview.widget.CardView android:id="@+id/scientific_work"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="20dp"
        android:layout_marginTop="@dimen/field_registration_margin_top"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Научный труд"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="20sp"/>
                <ImageView
                    android:id="@+id/close_scientific_work"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_clear_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Наименование научного труда"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={scienceWork.title}"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Дата публикации"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={scienceWork.publishedOn}"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название журнала"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={scienceWork.journalTitle}"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Название сборника"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={scienceWork.sbornikTitle}"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Номер журнала"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={scienceWork.journalNumber}"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Количество страниц"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={scienceWork.pageCount}"
                />

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Соавтор"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@={scienceWork.coauthor}"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Научные труды и изобретения"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Загрузка"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/scienceWorkImagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/field_registration_margin_top"/>
            </HorizontalScrollView>
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Находится в печати ?"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                android:checked="@={scienceWork.isPublished}"/>

            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Загрузить DOI"
                android:layout_marginTop="@dimen/field_registration_margin_top"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Загрузка"/>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/doiImagesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/field_registration_margin_top"/>
            </HorizontalScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>