<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeActionBar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppThemeToolbar" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:textSize">26sp</item>
    </style>


    <!-- styles.xml -->
    <style name="Theme.AppCompat.NoActionBar" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:fontFamily">@font/open_sans_light</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textSize" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CircularProgress" parent="Theme.MaterialComponents.Light">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">2sp</item>
    </style>

    <style name="AppTheme.CustomTheme">
        <item name ="android:windowIsTranslucent">true</item>
        <item name ="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/open_sans_semibold</item>
    </style>


    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

   <style name="autoscroll">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:scrollHorizontally">true</item>
    </style>

    <style name="TextAppearance">
        <item name="android:lines">2</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textColor">#FF4081</item>
        <item name="android:textColorPrimary">#FF4081</item>
    </style>


    <style name="Widget.MaterialComponents.BottomAppBar." parent="Theme.MaterialComponents.Light"/>
</resources>
